<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/blanco</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/marck_reg</item>
        <item name="android:textColor">?android:attr/colorPrimary</item>

    </style>


<!-- Estilos de Texto y de Botones  -->
    <style name="elTitulo">
        <item name="android:textSize">@dimen/letraXXXL</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="elTexto">
        <item name="android:textSize">@dimen/letraNormal</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="boton" parent="elTexto">
        <item name="android:background">@drawable/fboton</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="boton2" parent="elTexto">
        <item name="android:background">@drawable/fboton2</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="android:textAllCaps">false</item>
    </style>

<!-- Vamos a crear un apptheme para cada gama   -->
<!-- Verde, Rosa, Azul y Naranja   -->
    <style name="miGreen" parent="AppTheme">
        <item name="android:colorPrimary">@color/Green500</item>
        <item name="android:colorPrimaryDark">@color/Green800</item>
        <item name="android:colorAccent">@color/PurpleAc200</item>
        <item name="android:textColor">?android:attr/colorPrimary</item>
        <item name="android:windowBackground">@color/Green100</item>

    </style>
    <style name="miPink" parent="AppTheme">
        <item name="android:colorPrimary">@color/Pink500</item>
        <item name="android:colorPrimaryDark">@color/Pink800</item>
        <item name="android:colorAccent">@color/GreenAc400</item>
        <item name="android:textColor">?android:attr/colorPrimary</item>
        <item name="android:windowBackground">@color/Pink100</item>
    </style>

    <style name="miBlue" parent="AppTheme">
        <item name="android:colorPrimary">@color/Blue500</item>
        <item name="android:colorPrimaryDark">@color/Blue800</item>
        <item name="android:colorAccent">@color/AmberAc400</item>
        <item name="android:textColor">?android:attr/colorPrimary</item>
        <item name="android:windowBackground">@color/Blue100</item>
    </style>

    <style name="miOrange" parent="AppTheme">
        <item name="android:colorPrimary">@color/Orange500</item>
        <item name="android:colorPrimaryDark">@color/Orange500</item>
        <item name="android:colorAccent">@color/CyanAc200</item>
        <item name="android:textColor">?android:attr/colorPrimary</item>
        <item name="android:windowBackground">@color/Orange100</item>
    </style>



</resources>
